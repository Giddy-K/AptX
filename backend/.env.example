# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Firebase Configuration
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=your-client-email
FIREBASE_PRIVATE_KEY=your-private-key
FIREBASE_DATABASE_URL=https://your-project-id.firebaseio.com

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_LOCATION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=./config/service-account-key.json

# Google Cloud Storage
GCS_BUCKET_NAME=aptx-learning-materials
GCS_CURRICULUM_BUCKET=aptx-curriculum-files
GCS_MEDIA_BUCKET=aptx-media-files

# Document AI Configuration
DOCUMENT_AI_PROCESSOR_ID=your-processor-id
DOCUMENT_AI_LOCATION=us

# Vertex AI Configuration
VERTEX_AI_MODEL=gemini-1.5-pro-002
VERTEX_AI_LOCATION=us-central1

# Text-to-Speech Configuration
TTS_LANGUAGE_CODE=en-US
TTS_VOICE_NAME=en-US-Neural2-C
TTS_AUDIO_ENCODING=MP3

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=1h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRE=7d

# Redis Configuration (Optional - for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TTL=3600

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Security
BCRYPT_ROUNDS=10
SESSION_SECRET=your-session-secret-change-this-in-production

# File Upload Limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=application/pdf,application/vnd.openxmlformats-officedocument.wordprocessingml.document,image/jpeg,image/png

# Exam Configuration
DEFAULT_EXAM_QUESTIONS=10
MIN_DIFFICULTY_LEVEL=1
MAX_DIFFICULTY_LEVEL=5
ADAPTIVE_THRESHOLD=0.7

# Notification Configuration
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_PUSH_NOTIFICATIONS=false

# Analytics
ANALYTICS_RETENTION_DAYS=365
